root = true

[*]
charset = utf-8
# end_of_line = git
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
indent_style = space

# See https://github.com/editorconfig/editorconfig/issues/239
[{*.sh,bin/*,etc/*}]
indent_style = tab
tab_width = 8
